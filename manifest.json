{
    "manifest_version": 3,
    "name": "Cool Cleaner",
    "version": "1.0",
    "description": "Auto-clears cookies, cache, and history of specific sites after closing all tabs.",
    "permissions": [
      "tabs",
      "storage",
      "browsingData",
      "history"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Cool Cleaner"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
        "16": "src/16.png",
        "32": "src/32.png",
        "192": "src/192.png",
        "512": "src/512.png"
    }
  }
  